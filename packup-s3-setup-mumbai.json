{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowCreateBucketInMumbaiOnly",
      "Effect": "Allow",
      "Action": "s3:CreateBucket",
      "Resource": "*",
      "Condition": { "StringEquals": { "s3:LocationConstraint": "ap-south-1" } }
    },
    {
      "Sid": "ManageSecurityOnSpecificBuckets",
      "Effect": "Allow",
      "Action": [
        "s3:PutBucketEncryption",
        "s3:PutPublicAccessBlock",
        "s3:PutBucketLifecycleConfiguration",
        "s3:GetBucketLocation",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::packup-files-in",
        "arn:aws:s3:::packup-logs-in"
      ]
    },
    {
      "Sid": "ObjectsInSpecificBuckets",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject","s3:GetObject","s3:DeleteObject","s3:AbortMultipartUpload"
      ],
      "Resource": [
        "arn:aws:s3:::packup-files-in/*",
        "arn:aws:s3:::packup-logs-in/*"
      ]
    }
  ]
}
